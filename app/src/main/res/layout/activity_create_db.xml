<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_color"
	tools:context=".CreateDB">

	<Button
		android:id="@+id/create_new_db"
		android:layout_width="110dp"
		android:layout_height="45dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/custom_button"
		android:text="@string/button_create"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/name_db" />

	<EditText
		android:id="@+id/name_db"
		android:layout_width="225dp"
		android:layout_height="45dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/custom_line"
		android:ems="10"
		android:fontFamily="@font/montserrat"
		android:hint="@string/hint_name_db"
		android:inputType="textPersonName"
		android:paddingLeft="10dp"
		android:textColor="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView" />

	<Button
		android:id="@+id/cancel_create"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="35dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/custom_button_menu"
		android:text="Ã—"
		android:textSize="15dp"
		app:layout_constraintStart_toEndOf="@+id/textView"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:fontFamily="@font/montserrat_bold"
		android:text="@string/title_create_db"
		android:textColor="@color/white"
		android:textSize="25sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>